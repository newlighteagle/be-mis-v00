generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  password   String
  role       String @default("unregistered")
  group      String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model SidebarMenu {
  id          Int      @id @default(autoincrement())
  label       String   @unique
  path        String
  icon        String?
  order_index Int      @default(0)
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model WPEvidence {
  id            String   @id @default(cuid())
  district      String
  ics           String
  activity_code String
  activity      String
  evidence_note String
  evidence_date String
  link          String
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

model District {
  id           String    @id @default(cuid())
  district_id  String    @unique
  name         String
  ics          Ics[]
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
}

model Ics {
  id           String     @id @default(cuid())
  district_id  String
  ics_id       String     @unique
  name         String
  district     District   @relation(fields: [district_id], references: [district_id])
  farmers      Farmer[]
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt
}

model Farmer {
  id           String    @id @default(cuid())
  farmer_id    String    @unique
  name         String
  gender       String?
  birth_date   DateTime?
  ics_id       String?
  ics          Ics?      @relation(fields: [ics_id], references: [ics_id])
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
}